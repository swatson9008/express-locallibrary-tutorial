extends layout

block content
  h1= title
  if genre
    p #[strong Genre:] #{genre.name}
    if genre_books.length
      p #[strong Books in this genre: ] Please delete the following books before attempting to delete this genre.
      ul
        each book in genre_books
          li
            a(href=book.url) #{book.title}
    else
      p Do you really want to delete this Genre?

      form(method='POST' action=genre.url)
        input(type='hidden' name='genreid' value=genre._id)
        button.btn.btn-danger(type='submit') Delete
  else
    p Genre not found.
    a(href='/catalog/genres') Back to Genres
